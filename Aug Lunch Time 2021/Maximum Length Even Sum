/** Maximum Length Even Sum **/


def check(n):
    if((n%2)==1 and((n+2)//2)%2==1):
        return n-1
    elif((n%2)==1 and((n+1)//2)%2==0):
        return n
    elif((n%2)==0 and((n//2)%2)==0):
        return n
    else:
        return n-1
t=int(input())
for i in range(t):
    n=int(input())
    print(check(n))
    
